@{
    ViewBag.Title = "REPORT GAJI BORONGAN";
    ViewBag.pathParent = Url.Content("~").Substring(0, Url.Content("~").Length - 1);
}

<input type="hidden" id="urlPath" name="urlPath" value="@ViewBag.pathParent" />

<div class="form-inline">


    <div class="form-group ">
        <label for="exampleInputEmail1">Tanggal Awal</label><br>
        <input type="email" class="form-control" id="tgl_awal">

    </div>
    <div class="form-group mb-2">
        <label for="tgl_akhir">Tanggal Akhir</label><br>
        <input type="email" class="form-control" id="tgl_akhir">

    </div>


  
    <button style="width:200px; height:40px; margin-left:10px; margin-top:25px" type="submit" class="btn btn-primary" onclick="btnOnCLick();">Download Report</button>
</div>

<script>
$(document).ready(function () {

    $("#tgl_awal").kendoDatePicker({
        format: "yyyy-MM-dd",
        value: new Date()
        //min: new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate()),
    });

    $("#tgl_akhir").kendoDatePicker({
        format: "yyyy-MM-dd",
        value: new Date()
        //min: new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate()),
    });



});

function btnOnCLick() {
    window.location.href = $("#urlPath").val() + "/Report/exportGAJIBORONGAN?tglawal=" + $("#tgl_awal").val() + "&tglakhir=" + $("#tgl_akhir").val() ;

}
</script>


