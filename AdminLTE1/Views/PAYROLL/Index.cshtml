            $("#dv_grid").kendoGrid({
                dataSource: {
                    batch: true,
                    transport: {
                        read: {
                            url: $("#urlPath").val() + "/PAYROLL/listemployeesalary?paramst=" + s_str_search,
                            contentType: "application/json",
                            type: "POST"
                        },
                        parameterMap: function (data, operation) {
                            if (operation == "read") {
                                //data.TIKET_TAKE_UP_DOK = "" + $("#id_dok").val() + "";
